{
	"name": "discopopvsc",
	"displayName": "DiscoPoP for VSCode",
	"description": "VSCode extension for DiscoPoP",
	"version": "0.1.5",
	"engines": {
		"vscode": "^1.50.0"
	},
	"publisher": "devincfirat",
	"categories": [
		"Other"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/Devincf/DiscoPoP-for-VSCode.git"
	},
	"activationEvents": [
		"onCommand:discopopvsc.helloWorld",
		"onCommand:discopopvsc.fmap",
		"onCommand:discopopvsc.cugen",
		"onCommand:discopopvsc.dependprof",
		"onCommand:discopopvsc.idredop",
		"onCommand:discopopvsc.patid",
		"onView:discopop_view"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "discopopvsc.helloWorld",
				"title": "DiscoPoP: Hello World"
			},
			{
				"command": "discopopvsc.fmap",
				"title": "DiscoPoP: File Mapping"
			},
			{
				"command": "discopopvsc.cugen",
				"title": "DiscoPoP: CU Generation"
			},
			{
				"command": "discopopvsc.dependprof",
				"title": "DiscoPoP: Dependence Profiling"
			},
			{
				"command": "discopopvsc.idredop",
				"title": "DiscoPoP: Identifying Reduction Operations"
			},
			{
				"command": "discopopvsc.patid",
				"title": "DiscoPoP: (NOT IMPLEMENTED)Pattern identfication"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "discopopview",
					"title": "DiscoPoP View",
					"icon": "media/discopop_icon.png"
				}
			]
		},
		"views": {
			"discopopview": [
				{
					"id": "discopop_view",
					"name": "DiscoPoP View",
					"type": "webview",
					"icon": "media/discopop_files.png",
					"contextualTitle": "DiscoPoP View"
				}
			]
		},
		"configuration": {
			"title": "DiscoPoP For VSCode",
			"properties": {
				"discopopvsc.path": {
					"type": "string",
					"default": "",
					"description": "Specifies the folder path containing DiscoPoP"
				},
				"discopopvsc.build_folder": {
					"type": "string",
					"default": "build",
					"description": "Specifies the name of the build folder"
				},
				"discopopvsc.scripts_folder": {
					"type": "string",
					"default": "scripts",
					"description": "Specifies the name of the scripts folder"
				},
				"discopopvsc.clang": {
					"type": "string",
					"default": "clang++-8",
					"description": "Specifies the clang++ executable"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish_old": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js",
		"vscode:prepublish": "npm run -S esbuild-base -- --minify",
		"esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=out/main.js --external:vscode --format=cjs --platform=node",
		"esbuild": "npm run -S esbuild-base -- --sourcemap",
		"esbuild-watch": "npm run -S esbuild-base -- --sourcemap --watch",
		"test-compile": "tsc -p ./"
	},
	"devDependencies": {
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.4",
		"@types/node": "^12.11.7",
		"@types/vscode": "^1.50.0",
		"@typescript-eslint/eslint-plugin": "^4.14.1",
		"@typescript-eslint/parser": "^4.14.1",
		"esbuild": "^0.11.19",
		"eslint": "^7.19.0",
		"glob": "^7.1.6",
		"mocha": "^8.2.1",
		"typescript": "^4.1.3",
		"vscode-test": "^1.5.0"
	}
}